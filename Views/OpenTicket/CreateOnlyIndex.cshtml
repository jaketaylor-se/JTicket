@{
    ViewBag.Title = "Open Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Open Tickets</h2>    @* Page header*@

<table id="tickets" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Ticket</th>
            <th>Severity</th>
            <th>Created</th>
            <th>Last Modified</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<p>
    @Html.ActionLink("New Ticket", "New", "OpenTicket", null, new { @class = "btn btn-primary" })
</p>

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            $.fn.dataTable.enum(['Very High', 'High', 'Medium', 'Low', 'Very Low']);
            var table = $("#tickets").DataTable(
                {
                    "bInfo": false,

                    ajax:
                    {
                        url: "/api/tickets?filter=open",
                        dataSrc: ""
                    },

                    columns:
                        [
                            {
                                data: "title"
                            },

                            {
                                data: "severity",
                                render: function (data)
                                {
                                    switch (data)
                                    {
                                        case (1):
                                            return "Very Low";
                                        case (2):
                                            return "Low";
                                        case (3):
                                            return "Medium";
                                        case (4):
                                            return "High";
                                        case (5):
                                            return "Very High"
                                    }
                                }
                            },
                            {
                                data: "creationDate",
                                render: function (data, type, row)
                                {
                                    if (type === "sort" || type === "type")
                                    {
                                        return data;
                                    }
                                    return moment(data).format("MM-DD-YYYY HH:mm:ss");
                                }                      
                            },

                            {
                                data: "lastModified",
                                render: function (data, type, row)
                                {
                                    if (type === "sort" || type === "type")
                                    {
                                        return data;
                                    }

                                    return moment(data).format("MM-DD-YYYY HH:mm:ss");
                                }                      
                            },
                        ]
                });
        });
    </script>
}