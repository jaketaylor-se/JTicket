@model IEnumerable<JTicket.Models.Ticket>

@{
    ViewBag.Title = "Resolved Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Resolved Tickets</h2>
@if (!Model.Any())    // If there are no open tickets
{
    <p>There are currently no resolved tickets.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Ticket</th>
                <th>Severity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)    // Execution and query begins here
            {
            <tr>
                <td>@Html.ActionLink(t.Title, "Details", "ResolvedTicket", new { id = t.Id }, null)</td>    @*Link to details*@
                <td>@t.Severity</td>
            </tr>
            }
        </tbody>
    </table>
}